{
  "name": "nextcicd",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postbuild": "next-sitemap",
    "release": "release-it" 
  },
  "dependencies": {
    "@mdx-js/loader": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "@next/mdx": "^14.2.13",
    "gray-matter": "^4.0.3",
    "next": "14.2.13",
    "next-mdx-remote": "^5.0.0",
    "next-sitemap": "^4.2.3",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.13",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "release-it": "^16.0.0", 
    "auto-changelog": "^2.0.0" 
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "requireBranch": "main",
      "commit": true,
      "push": true,
      "pushArgs": ["--follow-tags"]
    },
    "github": {
      "release": true,
      "assets": ["dist/*.zip"],
      "draft": false,
      "token": "${GITHUB_TOKEN}"
    },
    "npm": {
      "publish": false
    },
    "changelog": {
      "preset": "angular",
      "ignore": ["docs", "test"]
    },
    "hooks": {
      "after:bump": "npm run build", 
      "after:release": "npm run changelog" 
    }
  }
}
